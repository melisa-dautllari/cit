#Week 11
#Assignment 1
def calculate_grade():
    name = input("Hi student! Enter your name: ")
    score = int(input("Enter test score: "))

    if score >= 90:
        grade = "A"
        result = "You passed the exam!"
    elif score >= 80:
        grade = "B"
        result = "You passed the exam!"
    elif score >= 70:
        grade = "C"
        result = "You passed the exam!"
    elif score >= 60:
        grade = "D"
        result = "You passed the exam!"
    else:
        grade = "F"
        result = "You failed the exam!"

    print(f"{name}, your grade is {grade} and {result}")

calculate_grade()

#Assignment 2
def check_leap_year():
    year = int(input("Enter the year: "))

    if (year % 4 == 0 and year % 100 != 0) or (year % 400 == 0):
        print(year, "is a leap year.")
    else:
        print(year, "is not a leap year.")

check_leap_year()

#Assignment 3
def calculate_tax():
    salary = float(input("Enter your salary: "))

    if salary <= 1000:
        tax_rate = 0.20
    elif salary <= 2500:
        tax_rate = 0.15
    else:
        tax_rate = 0.10

    tax = salary * tax_rate
    remaining_salary = salary - tax

    print("Your salary is", salary, "of which", tax_rate, "is tax and you take home", remaining_salary)

calculate_tax()

#Assignment 4
def find_largest_number():
    number1 = int(input("Enter the first number: "))
    number2 = int(input("Enter the second number: "))
    number3 = int(input("Enter the third number: "))

    largest = number1

    if number2 > largest:
        largest = number2
    if number3 > largest:
        largest = number3

    print("Between", number1, ",", number2, "and", number3, ",", largest, "is the largest number")

find_largest_number()

